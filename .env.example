# UpdatEngine Server - Environment Configuration
# Copy this file to .env and fill in the values
# DO NOT commit .env to version control

# =============================================================================
# SECURITY
# =============================================================================

# Django secret key (generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
SECRET_KEY=change-me-to-a-long-random-secret-key

# Debug mode - set to False in production
DEBUG=False

# =============================================================================
# SERVER & HOSTS
# =============================================================================

# Server hostname (e.g. updatengine.example.com)
SERVER_NAME=localhost

# HTTPS port
PORT=443

# Comma-separated list of allowed hostnames
ALLOWED_HOSTS=localhost,127.0.0.1

# Comma-separated list of trusted CSRF origins
CSRF_TRUSTED_ORIGINS=https://localhost:443

# =============================================================================
# DATABASE (MariaDB / MySQL)
# =============================================================================

# Full DATABASE_URL takes precedence if set
# DATABASE_URL=mysql://user:password@localhost:3306/updatengine
DB_HOST=localhost
DB_PORT=3306
DB_NAME=updatengine
DB_USER=updatengine
DB_PASSWORD=change-me

# =============================================================================
# EMAIL
# =============================================================================
EMAIL_HOST=localhost
EMAIL_PORT=25
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=False
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=webmaster@localhost
SERVER_EMAIL=root@localhost

# Comma-separated list of admin email addresses (e.g. Name <email@example.com>)
ADMINS=

# =============================================================================
# LOCALIZATION
# =============================================================================
LANGUAGE_CODE=fr
TZ=Europe/Paris

# =============================================================================
# UPDATENGINE SPECIFIC
# =============================================================================

# Show permission config auth button in UI
SHOW_PERM_CONFIG_AUTH=False

# =============================================================================
# CACHE (Redis)
# =============================================================================

# Redis connection URL
# Docker Compose service name is 'redis' â€” change to 'localhost' for bare-metal
REDIS_URL=redis://redis:6379/0

# Default cache timeout in seconds (300 = 5 minutes)
CACHE_TIMEOUT=300
