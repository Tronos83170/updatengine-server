{
  "name": "updatengine-server-modern",
  "version": "7.0.0",
  "description": "Modern UpdatEngine Server with NinjaOne-inspired interface",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:js\"",
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss -i ./static_modern/src/input.css -o ./static_modern/dist/output.css --minify",
    "watch:css": "tailwindcss -i ./static_modern/src/input.css -o ./static_modern/dist/output.css --watch",
    "build:js": "esbuild ./static_modern/src/main.js --bundle --minify --sourcemap --outfile=./static_modern/dist/main.js",
    "watch:js": "esbuild ./static_modern/src/main.js --bundle --sourcemap --watch --outfile=./static_modern/dist/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint static_modern/src",
    "format": "prettier --write \"static_modern/src/**/*.{js,css}\""
  },
  "keywords": [
    "updatengine",
    "system-management",
    "deployment",
    "inventory",
    "rmm",
    "modern-ui"
  ],
  "author": "Tronos83170",
  "license": "GPL-2.0",
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo": "^8.0.4",
    "alpinejs": "^3.13.5",
    "chart.js": "^4.4.1",
    "htmx.org": "^1.9.10"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "tailwindcss": "^3.4.1"
  }
}
